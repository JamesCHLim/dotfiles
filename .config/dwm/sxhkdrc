# INDEPENDANT HOTKEYS #

## General keys ##

# Toggle compositor
super + c
    pkill compton || compton --backend glx --vsync opengl-swc
#
# Toggle Notifications
super + {shift + ,_} n
    notify-send {'DUNST_COMMAND_PAUSE', 'DUNST_COMMAND_RESUME'; notify-send 'Notifications Resumed'}

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Volume control
{_,shift + }XF86Audio{RaiseVolume,LowerVolume}
    percent={5,1}; \
    pactl set-sink-mute 0 false; \
    pactl set-sink-volume 0 {+,-}${percent}% && \
    bar_script.sh

XF86AudioMute
    pactl set-sink-mute 0 toggle && \
    bar_script.sh

# Music control
{_,shift + ,super + } Pause
    playerctl {play-pause, --player=spotify play-pause, --all-players pause}

super + shift + {Left, Right}
    playerctl {previous, next}

# Brightness control
{_,shift + }XF86MonBrightnessUp
    sudo $HOME/bin/backlight_control.sh up {_,1} && \
    bar_script.sh

{_,shift + }XF86MonBrightnessDown
    sudo $HOME/bin/backlight_control.sh down {_,1} && \
    bar_script.sh

# Sleep (Add lockscreen)
XF86Sleep
    systemctl suspend

# Screenshotting
ctrl + Print
    maim | xclip -selection clipboard -t image/png && notify-send 'Screenshot copied to clipboard'

Print
    maim ~/Pictures/screenshot_$(date '+%Y-%m-%d_%H-%M-%S').png && notify-send 'Screenshot saved'

ctrl + alt + Print
    maim -i $(xdotool getactivewindow)  | xclip -selection clipboard -t image/png && notify-send 'Screenshot copied to clipboard'

alt + Print
    maim -i $(xdotool getactivewindow) ~/Pictures/screenshot_$(date '+%Y-%m-%d_%H-%M-%S').png && notify-send 'Screenshot saved'

ctrl + shift + Print
    maim -s | xclip -selection clipboard -t image/png && notify-send 'Screenshot copied to clipboard'

shift + Print
    maim -s ~/Pictures/screenshot_$(date '+%Y-%m-%d_%H-%M-%S').png && notify-send 'Screenshot saved'

## Applications ##
#
# terminal emulator
super + t
	alacritty

# program launcher
super + d
	rofi -show drun -show-icons

# program switcher
super + slash
    rofi -show window -show-icons

# Open Browser
super + r
    brave-browser

#Open File browser
super + e
    nautilus

#Open various apps
ctrl + alt + o; {r, s, w}
    {rambox, spotify, echo "should open a network manager"}

#Emoji switcher
super + s
    /home/jameschlim/bin/emoji_select.sh
